doctype html
html(lang="ko-KR")
  include includes/head.pug
  body
    include includes/header.pug
    main 
      h2="글 목록"
      p= "프론트엔드 개발에 필요한 내용을 공유합니다."
      ul
        each post in posts
          - const year = String(post.created_at.getFullYear());
          - const month = String(post.created_at.getMonth() + 1).padStart(2, "0");
          - const date = String(post.created_at.getDate()).padStart(2, "0");
          li
            article
              a(href="posts/"+post.slug)
                main
                  h3= post.title
                  p= post.summary
                  time(datetime=post.created_at) #{new Intl.DateTimeFormat('ko-KR', { dateStyle: 'medium' }).format(post.created_at)}
                  footer 
                    ul
                      each tag in post.tags
                        li= tag
    include includes/footer.pug