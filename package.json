{
  "name": "blog",
  "packageManager": "yarn@4.0.2",
  "type": "commonjs",
  "scripts": {
    "build": "rm -rf docs && yarn ts-node src/build.ts && yarn tailwindcss -i ./src/assets/style.css -o ./docs/style.css",
    "dev": "yarn nodemon -w '*' -x 'ts-node' src/app.ts",
    "serve": "yarn static-server docs"
  },
  "dependencies": {
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/pug": "^2.0.10",
    "@types/showdown": "^2",
    "gray-matter": "^4.0.3",
    "nodemon": "^3.0.2",
    "showdown": "^2.1.0",
    "static-server": "^2.2.1",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
